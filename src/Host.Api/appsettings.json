{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  
  "Edge": {
    "EdgeId": "edge-001",
    "DatabasePath": "../Host.Edge/data/intellimaint.db"
  },
  
  "_comment_jwt": "生产环境请使用环境变量 JWT_SECRET_KEY，不要在此文件中配置密钥",
  "Jwt": {
    "SecretKey": "IntelliMaint-Pro-Secret-Key-2024-Must-Be-At-Least-32-Chars",
    "Issuer": "IntelliMaint",
    "Audience": "IntelliMaint",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7
  },
  
  "_comment_cleanup": "v56: 数据清理配置，防止数据库无限增长",
  "DataCleanup": {
    "TelemetryRetentionDays": 7,
    "Telemetry1mRetentionDays": 30,
    "Telemetry1hRetentionDays": 365,
    "AlarmRetentionDays": 30,
    "AuditLogRetentionDays": 90,
    "CleanupIntervalHours": 6,
    "VacuumAfterCleanup": true
  }
}
