{
  "_comment": "生产环境配置模板 - 部署前请根据实际环境修改",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },

  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://0.0.0.0:5001"
      }
    }
  },

  "_comment_db": "生产环境推荐使用 TimescaleDB",
  "DatabaseProvider": "TimescaleDb",

  "ConnectionStrings": {
    "_comment": "生产环境连接字符串应通过环境变量 ConnectionStrings__TimescaleDb 设置",
    "TimescaleDb": ""
  },

  "_comment_jwt": "JWT 密钥必须通过环境变量 JWT_SECRET_KEY 设置，此处不配置",
  "Jwt": {
    "_security_note": "SecretKey 必须通过环境变量 JWT_SECRET_KEY 设置",
    "Issuer": "IntelliMaint",
    "Audience": "IntelliMaint",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7
  },

  "_comment_cors": "生产环境 CORS 允许的域名",
  "Cors": {
    "AllowedOrigins": [
      "https://your-domain.com",
      "https://www.your-domain.com"
    ]
  },

  "_comment_cleanup": "数据保留策略",
  "DataCleanup": {
    "TelemetryRetentionDays": 30,
    "Telemetry1mRetentionDays": 90,
    "Telemetry1hRetentionDays": 365,
    "AlarmRetentionDays": 90,
    "AuditLogRetentionDays": 365,
    "CleanupIntervalHours": 6,
    "VacuumAfterCleanup": true
  },

  "_comment_ratelimit": "登录速率限制配置",
  "RateLimiting": {
    "Login": {
      "WindowSeconds": 60,
      "MaxAttempts": 5
    },
    "Api": {
      "WindowSeconds": 60,
      "MaxRequests": 100
    }
  }
}
